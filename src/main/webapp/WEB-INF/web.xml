<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" version="4.0">
  <display-name>EstimatesHTML</display-name>
  <context-param>
    <param-name>dbUrl</param-name>
    <param-value>jdbc:mysql://localhost:3306/dbestimate?serverTimezone=UTC</param-value>
  </context-param>
  <context-param>
    <param-name>dbUser</param-name>
    <param-value>root</param-value>
  </context-param>
  <context-param>
    <param-name>dbPassword</param-name>
    <param-value>password</param-value>
  </context-param>
  <context-param>
    <param-name>dbDriver</param-name>
    <param-value>com.mysql.cj.jdbc.Driver</param-value>
  </context-param>
  <filter>
    <filter-name>Checker</filter-name>
    <filter-class>it.polimi.tiw.filters.Checker</filter-class>
  </filter>
  <filter>
    <filter-name>ClientChecker</filter-name>
    <filter-class>it.polimi.tiw.filters.ClientChecker</filter-class>
  </filter>
  <filter>
    <filter-name>WorkerChecker</filter-name>
    <filter-class>it.polimi.tiw.filters.WorkerChecker</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>Checker</filter-name>
    <url-pattern>/CreateEstimate</url-pattern>
    <url-pattern>/EstimatePrice</url-pattern>
    <url-pattern>/Logout</url-pattern>
    <url-pattern>/GetEstimateDetails</url-pattern>
    <url-pattern>/GetProductOptions</url-pattern>
    <url-pattern>/GoToEstimatePrice</url-pattern>
    <url-pattern>/GoToHomeClient</url-pattern>
    <url-pattern>/GoToHomeWorker</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>ClientChecker</filter-name>
    <url-pattern>/GoToHomeClient</url-pattern>
    <url-pattern>/CreateEstimate</url-pattern>
    <url-pattern>/GetEstimateDetails</url-pattern>
    <url-pattern>/GetProductOptions</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>WorkerChecker</filter-name>
    <url-pattern>/GoToHomeWorker</url-pattern>
    <url-pattern>/EstimatePrice</url-pattern>
    <url-pattern>/GoToEstimatePrice</url-pattern>
  </filter-mapping>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
</web-app>